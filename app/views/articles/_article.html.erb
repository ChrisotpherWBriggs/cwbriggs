<% obj.each do |article| %>
<div class="row">
  <div class="col-xs-8 col-xs-offset-2">
    <div class="well">
      <div class="article-title">
        <h3><%= link_to article.title, article_path(article), class: "type" %></h3>
      </div>
      <div>
        <%= truncate(article.body, length: 50) %>
      </div>

      <% if article.categories.any? %>
        <p> Categories: <%= render article.categories %></p>
      <% end %>
        <div>
            <%= link_to "Edit This Article", edit_article_path(article), class: "btn btn-xs btn-danger" %> 
            <%= link_to "Delete Article", article_path(article), method: :delete, 
                                                        data: {confirm: "Are your sure you want to delte?"}, 
                                                        class: "btn btn-xs btn-danger" %>
          
          </div>
        </div>
      
    </div>
  </div>
  
<% end %>